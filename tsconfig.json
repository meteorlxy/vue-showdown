{
  "extends": "@meteorlxy/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ES2022",

    "baseUrl": ".",
    "paths": {
      "vue-showdown": ["src/index.ts"]
    },

    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./docs/.vuepress/**/*", "./vite.config.ts"]
}
